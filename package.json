{
  "name": "sharemotion-server",
  "version": "1.0.0",
  "main": "server/src/index.js",
  "scripts": {
    "dev": "nodemon --watch server/src --ext js,mjs --exec node server/src/index.js",
    "start": "node server/src/index.js",
    "client": "cd client && npm start",
    "server": "npm run dev",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "leaflet": "^1.9.4",
    "mongoose": "^7.3.1",
    "react-leaflet": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.22"
  }
}
